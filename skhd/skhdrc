# -- Переключение фокуса окна --

# изменить фокус окна в пределах рабочего пространства
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# -- Изменение макета --

# поворот макета по часовой стрелке
ctrl + cmd - r : yabai -m space --rotate 270

# отразить по оси Y
shift + alt - y : yabai -m space --mirror y-axis

# отразить по оси X
shift + alt - x : yabai -m space --mirror x-axis

# переключение окна в режим плавающего окна
ctrl + cmd - c : yabai -m window --toggle float --grid 4:4:1:1:2:2

# -- Изменение размера окна --

# максимизировать окно
ctrl + alt - return : yabai -m window --toggle zoom-fullscreen

# сбалансировать дерево окон (изменить размер окон, чтобы они занимали одинаковую площадь)
shift + alt - e : yabai -m space --balance

# -- Перемещение окон --

# обмен окнами
ctrl + cmd - j : yabai -m window --swap south
ctrl + cmd - k : yabai -m window --swap north
ctrl + cmd - h : yabai -m window --swap west
ctrl + cmd - l : yabai -m window --swap east

# переместить окно и разделить
# ctrl + alt - j : yabai -m window --warp south
# ctrl + alt - k : yabai -m window --warp north
# ctrl + alt - h : yabai -m window --warp west
# ctrl + alt - l : yabai -m window --warp east

# переместить окно на предыдущее и следующее рабочее пространство
ctrl + cmd - d : yabai -m window --space prev && yabai -m space --focus prev && yabai -m window --focus last
ctrl + cmd - f : yabai -m window --space next && yabai -m space --focus next && yabai -m window --focus last

# переместить окно на определенное рабочее пространство
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;

